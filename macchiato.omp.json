{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": false,
    "shell_integration": true,
    "console_title_template": "{{ .Shell }} in {{ .PWD }}",
    "palette": {
        "rosewater": "#F4DBD6",
        "flamingo": "#F0C6C6",
        "pink": "#F5BDE6",
        "mauve": "#C6A0F6",
        "red": "#ED8796",
        "maroon": "#EE99A0",
        "peach": "#F5A97F",
        "yellow": "#EED49F",
        "green": "#A6DA95",
        "teal": "#8BD5CA",
        "sky": "#91D7E3",
        "sapphire": "#7DC4E4",
        "blue": "#8AADF4",
        "lavender": "#B7BDF8",
        "text": "#CAD3F5",
        "subtext1": "#B8C0E0",
        "subtext0": "#A5ADCB",
        "overlay2": "#939AB7",
        "overlay1": "#8087A2",
        "overlay0": "#6E738D",
        "surface2": "#5B6078",
        "surface1": "#494D64",
        "surface0": "#363A4F",
        "base": "#24273A",
        "mantle": "#1E2030",
        "crust": "#181926",
        "true": "p:green",
        "false": "p:red",
        "time": "p:overlay1",
        "os-fg": "p:base",
        "os-bg": "p:overlay1",
        "root-fg": "p:base",
        "root-bg": "p:yellow",
        "path": "p:yellow",
        "git": "p:lavender",
        "docker": "p:sky",
        "go": "p:mauve",
        "haskell": "p:mauve",
        "julia": "p:mauve",
        "lua": "p:mauve",
        "python": "p:mauve",
        "rust": "p:mauve"
    },
    "transient_prompt": {
        "foreground": "p:transient",
        "template": "{{ now | date \"15:04:05\" }} {{ if gt .Code 0 }}<p:false>\u276f</>{{ else }}<p:true>\u276f</>{{ end }} "
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "os",
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "foreground": "p:os-fg",
                    "background": "p:os-bg",
                    "foreground_templates": [
                        "{{ if .Root }}p:root-fg{{ end }}"
                    ],
                    "background_templates": [
                        "{{ if .Root }}p:root-bg{{ end }}"
                    ],
                    "template": " {{ .Icon }} ",
                    "properties": {
                        "windows": "\ue70f"
                    }
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "p:path",
                    "template": " {{ .Path }} ",
                    "properties": {
                        "home_icon": "~",
                        "folder_icon": "..",
                        "style": "agnoster_short"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "p:git",
                    "template": "{{ .HEAD }} ",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "cherry_pick_icon": "\ue29b ",
                        "commit_icon": "\uf417 ",
                        "fetch_status": false,
                        "fetch_stash_count": false,
                        "fetch_upstream_icon": false,
                        "merge_icon": "\ue727 ",
                        "no_commits_icon": "\uf0c3 ",
                        "rebase_icon": "\ue728 ",
                        "revert_icon": "\uf0e2 ",
                        "tag_icon": "\uf412 "
                    }
                },
                {
                    "type": "docker",
                    "style": "plain",
                    "foreground": "p:docker",
                    "template": "\uf308 {{ .Context }} "
                },
                {
                    "type": "go",
                    "style": "plain",
                    "foreground": "p:go",
                    "template": "\ue627 {{ if not .Error }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "haskell",
                    "style": "plain",
                    "foreground": "p:haskell",
                    "template": "\ue61f {{ if not .Error }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "julia",
                    "style": "plain",
                    "foreground": "p:julia",
                    "template": "\ue624 {{ if not .Error }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "lua",
                    "style": "plain",
                    "foreground": "p:lua",
                    "template": "\ue620 {{ if not .Error }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "p:python",
                    "template": "\ue73c {{ if not .Error }}{{ if .Venv }}venv/{{ end }}{{ .Full }}{{ end }} ",
                    "properties": {
                        "display_default": false,
                        "display_mode": "context"
                    }
                },
                {
                    "type": "rust",
                    "style": "plain",
                    "foreground": "p:rust",
                    "template": "\ue7a8 {{ if not .Error }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "foreground": "p:true",
                    "foreground_templates": [
                        "{{ if .Code }}p:false{{ end }}"
                    ],
                    "template": "\udb81\udd1f {{ .FormattedMs }} ",
                    "properties": {
                        "threshold": 500,
                        "style": "austin"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "p:true",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}p:false{{ end }}"
                    ],
                    "template": "\u276f ",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        }
    ]
}
