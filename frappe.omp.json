{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": false,
    "console_title_template": "{{ .Shell }} in {{ .Folder }}",
    "palette": {
        "rosewater": "#F2D5CF",
        "flamingo": "#EEBEBE",
        "pink": "#F4B8E4",
        "mauve": "#CA9EE6",
        "red": "#E78284",
        "maroon": "#EA999C",
        "peach": "#EF9F76",
        "yellow": "#E5C890",
        "green": "#A6D189",
        "teal": "#81C8BE",
        "sky": "#99D1DB",
        "sapphire": "#85C1DC",
        "blue": "#8CAAEE",
        "lavender": "#BABBF1",
        "text": "#C6D0F5",
        "subtext1": "#B5BFE2",
        "subtext0": "#A5ADCE",
        "overlay2": "#949CBB",
        "overlay1": "#838BA7",
        "overlay0": "#737994",
        "surface2": "#626880",
        "surface1": "#51576D",
        "surface0": "#414559",
        "base": "#303446",
        "mantle": "#292C3C",
        "crust": "#232634",
        "true": "p:green",
        "false": "p:red",
        "transient": "p:text",
        "os-fg": "p:rosewater",
        "os-bg": "p:surface2",
        "root-fg": "p:base",
        "root-bg": "p:yellow",
        "path": "p:peach",
        "git": "p:lavender",
        "docker": "p:sapphire",
        "go": "p:pink",
        "haskell": "p:pink",
        "julia": "p:pink",
        "lua": "p:pink",
        "python": "p:pink",
        "rust": "p:pink",
        "exectime": "p:rosewater"
    },
    "transient_prompt": {
        "foreground": "p:transient",
        "template": "{{ now | date \"15:04:05\" }} {{ if gt .Code 0 }}<p:false>\u276f</>{{ else }}<p:true>\u276f</>{{ end }} "
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "os",
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "foreground": "p:os-fg",
                    "background": "p:os-bg",
                    "foreground_templates": [
                        "{{ if .Root }}p:root-fg{{ end }}"
                    ],
                    "background_templates": [
                        "{{ if .Root }}p:root-bg{{ end }}"
                    ],
                    "template": " {{ .Icon }} ",
                    "properties": {
                        "windows": "\ue70f"
                    }
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "p:path",
                    "template": " {{ .Path }} ",
                    "properties": {
                        "home_icon": "~",
                        "folder_icon": "..",
                        "style": "agnoster_short"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "p:git",
                    "template": "{{ .HEAD }} ",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "cherry_pick_icon": "\ue29b ",
                        "commit_icon": "\uf417 ",
                        "fetch_status": false,
                        "fetch_stash_count": false,
                        "fetch_upstream_icon": false,
                        "merge_icon": "\ue727 ",
                        "no_commits_icon": "\uf0c3 ",
                        "rebase_icon": "\ue728 ",
                        "revert_icon": "\uf0e2 ",
                        "tag_icon": "\uf412 "
                    }
                },
                {
                    "type": "docker",
                    "style": "plain",
                    "foreground": "p:docker",
                    "template": "\uf308 {{ .Context }} "
                },
                {
                    "type": "go",
                    "style": "plain",
                    "foreground": "p:go",
                    "template": "\ue627 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "haskell",
                    "style": "plain",
                    "foreground": "p:haskell",
                    "template": "\ue61f {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "julia",
                    "style": "plain",
                    "foreground": "p:julia",
                    "template": "\ue624 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "lua",
                    "style": "plain",
                    "foreground": "p:lua",
                    "template": "\ue620 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "p:python",
                    "template": "\ue73c {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
                    "properties": {
                        "display_default": false,
                        "display_mode": "context"
                    }
                },
                {
                    "type": "rust",
                    "style": "plain",
                    "foreground": "p:rust",
                    "template": "\ue7a8 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "foreground": "p:exectime",
                    "template": "\udb81\udd1f {{ .FormattedMs }} ",
                    "properties": {
                        "threshold": 500,
                        "style": "austin"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "p:true",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}p:false{{ end }}"
                    ],
                    "template": "\u276f ",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        }
    ]
}